

<h1>Wright Co Products</h1>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        	<h1><%= product.name %></h1>
        	<p><%= product.description %></p>
        	<strong>$ price determined in cart $</strong>
      </div><!-- /col -->
    <% end %>
  </div>
</div>

<br>
<% if signed_in? && current_user.admin? %>
<%= link_to 'New Wright Product', new_product_path %>
<% end %>

