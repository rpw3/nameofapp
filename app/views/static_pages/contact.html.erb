<div class= "Contact" id="contact">
  <h1>Contact</h1>
    <p>For any question or inquiries, fill out this form and submit.</p>
</div>
<%= form_tag("/static_pages/thank_you") do %>

  <div class="container-fluid">  
    <div class="row">
      <div class="col-md-8">
        <div class="form-group">
          <%= label_tag :name, "Name" %>
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
        </div>      
        <div class="form-group">
          <%= label_tag :email, "Email Address" %>
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
          <%= label_tag :message, "Message" %>
          <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
        </div>      
        <div class="checkbox">
          <label><input type="checkbox" value="">Check to verify information</label>
        </div>
      </div>
    </div>
    <%= submit_tag "Send" %>   
    <% end %>
  </div>  